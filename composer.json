{
    "name": "esegments/laravel-extensions",
    "description": "A minimal, type-safe extension points system for Laravel applications",
    "keywords": ["laravel", "extensions", "hooks", "plugins", "type-safe"],
    "homepage": "https://github.com/esegments/laravel-extensions",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Esegments",
            "email": "dev@esegments.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../core"
        }
    ],
    "require": {
        "php": "^8.2",
        "esegments/core": "*@dev",
        "illuminate/container": "^11.0|^12.0",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "spatie/laravel-data": "^4.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Esegments\\LaravelExtensions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Esegments\\LaravelExtensions\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Esegments\\LaravelExtensions\\ExtensionServiceProvider"
            ],
            "aliases": {
                "Extensions": "Esegments\\LaravelExtensions\\Facades\\Extensions"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
